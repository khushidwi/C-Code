
       #include<iostream>
using namespace std;
struct node{
    int data;
    node*next;
    node(int value){
        data=value;
        next=NULL;
    }
};
void printll(node* head){
    node* temp=head;
    //int temp2=0;
    //int sum=0;
    while(temp!=NULL){
        cout<<temp->data<<" ";
       // sum+=temp->data;
        temp=temp->next;
        //temp2++;
    }
    cout<<endl;
   //cout<<"length  linked list "<<temp2<<endl;
   //cout<<"sum of linked list "<<sum<<endl;
}
void insertioninll(node* &head,int pos,int value){
    node* p=head;
    node* q=nullptr;
    for(int i=0;i<pos;i++){
        q=p;
        p=p->next;
    }
    node* newnode=new node(value);
    newnode->next=p;
    q->next = newnode;
}
void insertionhead(node* &head,int value){
    node* newnode=new node(value);
    newnode->next=head;
    head=newnode;
}
void insertiontail(node* head,int value){
    node* p=head;
    while(p->next!=nullptr){
       p=p->next;
    }
    node* newnode=new node(value);
    p->next=newnode;
}
void deletionll(node* &head,int pos,int value){
    node* p=head;
    node* q=nullptr;
    for(int i=0;i<pos;i++){
        q=p;
        p=p->next;
    }
    q->next=p->next;
    delete p;
}
void deletehead(node* &head,int value,int pos){
    node* p=head;
    node* q=nullptr;
    for(int i=0;i<pos;i++){
        q=p;
        p=p->next;
    }
    p=head;
    head=head->next;
    delete p;
    
}
void deletetail(node* &head,int value,int pos){
    node* p=head;
    node* q=nullptr;
    for(int i=0;i<pos;i++){
        q=p;
        p=p->next;
    }
    q->next=NULL;
    delete p;
}
int main(){
    node* head =  new node(10);
    head->next= new node (15);
    head->next->next = new node(20);
    printll(head);
    insertioninll(head,1,12);
    printll(head);
    insertionhead(head,5);
    printll(head);
    insertiontail(head,89);
    printll(head);
    deletionll(head,2,12);
    printll(head);
    deletehead(head,1,1);
    printll(head);
    deletetail(head,89,4);
    printll(head);
    return 0;
}
