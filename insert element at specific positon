#include <iostream>
using namespace std;
int main(){
    int n=5;
    int arr[n]={3,2,1,4,2};
    int pos=3;
    int value=6;
    int brr[n+1];
    int i;
    for( i=0;i<pos;i++){
        brr[i]=arr[i];
    }
    brr[i]=value;
    for(int j=pos+1;j<=n;j++){
        brr[j]=arr[i++];
    }
    for(int j=0;j<=n;j++){
        cout<<brr[j]<<" ";
    }
}
