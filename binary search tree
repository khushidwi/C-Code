#include<iostream>
#include<queue>
using namespace std;
struct Node{
    int data;
    Node* left;
    Node* right;
    Node(int value){
        data=value;
        left=nullptr;
        right=nullptr;
    }
};
bool searchinginbst(Node* root,int x){
    Node*temp=root;
    while(temp!=nullptr){
        if(temp->data == x){
            return true;
        }
        if(temp->data > x){
            temp=temp->left;
        }
        else{
            temp=temp->right;
        }
    }
        return false;
    
    
}
void postorder(Node* root){
    if(root==nullptr){
        return;
    }
    postorder(root->left);
    postorder(root->right);
    cout<<root->data<<" ";
}
void preorder(Node* root){
    if(root==nullptr){
        return ;
    }
    cout<<root->data<<" ";
    preorder(root->left);
    preorder(root->right);
}

void inorder(Node* root){
    if(root==nullptr){
        return ;
    }
    inorder(root->left);
    cout<<root->data<<" ";
    inorder(root->right);
}
void levelorder(Node* root){
    queue<Node* >q;
    q.push(root);
    q.push(NULL);
    
    
    while(!q.empty()){
        Node* temp=q.front();
        q.pop();
    
    if(temp == NULL){
        cout<<endl;
        if(!q.empty()){
            q.push(NULL);
        }
    }
    else{
        cout<<temp->data<<" ";
     if(temp->left)q.push(temp->left);
    if(temp->right)q.push(temp->right);
    }
    }
    
}
Node* traverseinbst(Node* root,int d){
    if(root == nullptr){
        root= new Node(d);
        return root;
    }
    if(d<root->data){
        root->left=traverseinbst(root->left,d);
    }
    else{
        root->right=traverseinbst(root->right,d);
    }
    return root;
}


void takeinput(Node* &root){
    int data;
    cin>>data;
    while(data !=-1 ){
        root= traverseinbst(root,data);
        cin>>data;
    }
}
int main(){
    Node* root=NULL;
    cout<<"enter data: ";
    takeinput(root);
    levelorder(root);
    cout<<endl;
    inorder(root);
    cout<<endl;
    postorder(root);
    cout<<endl;
    preorder(root);
    cout<<endl;
    cout<<searchinginbst(root,34);
    
}
